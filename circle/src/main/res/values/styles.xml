<resources>

    <style name="AppTheme" parent="CyanYellowAppTheme"/>

    <!-- Base application theme. -->
    <style name="CyanYellowAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>
        <item name="android:divider">@color/divider</item>
        <item name="itemBackground">@android:color/white</item>>
    </style>
    <style name="shareDialogTextStyle">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#909090</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginBottom">24dp</item>
    </style>
</resources>
